<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Song Request Queue<% if (title) { %> - <%= title %><% } %></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
% if (stash 'full_width') {
  <div class="container-fluid">
% } else {
  <div class="container">
% }
  <div class="row">
% if (defined stash 'user_id') {
  <div class="col-sm-2 offset-sm-5 small">Logged in as <% if (current_route 'account') { %><b><%= stash 'username' %></b><% } else { %><a href="/account"><%= stash 'username' %></a><% } %></div>
% } else {
  <div class="col-sm-2 offset-sm-5"></div>
% }
  <div class="col-sm-1"><% if (current_route 'index') { %><b>Home</b><% } else { %><a href="/">Home</a><% } %></div>
  <div class="col-sm-1"><% if (current_route 'browse') { %><b>Browse</b><% } else { %><a href="/browse">Browse</a><% } %></div>
% if (stash 'is_admin') {
  <div class="col-sm-1"><% if (current_route 'admin') { %><b>Admin</b><% } else { %><a href="/admin">Admin</a><% } %></div>
% } else {
  <div class="col-sm-1"></div>
% }
% if (defined stash 'user_id') {
  <div class="col-sm-1"><a href="/logout">Logout</a></div>
% } else {
  <div class="col-sm-1"><% if (current_route 'login') { %><b>Login</b><% } else { %><a href="/login">Login</a><% } %></div>
% }
  <div class="col-sm-1"><a href="https://github.com/Grinnz/song-request-queue" target="_blank">Source</a></div>
  </div>
  <div class="row"><h1>Song Request Queue</h1></div>
<%= content %>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.min.js" integrity="sha256-1Q2q5hg2YXp9fYlM++sIEXOcUb8BRSDUsQ1zXvLBqmA=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/promise-polyfill@7.1.0/dist/polyfill.min.js" integrity="sha256-0GoNO3c+wysR0M132hrJ5fY7GfIEhrE/N4WwmvqQI7M=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/url-polyfill@1.0.11/url-polyfill.min.js" integrity="sha256-0sYS8XDti4HJJJhXdEweZuW3V13l8xaf0NyZiaML8r4=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/fetch/2.0.3/fetch.min.js" integrity="sha256-aB35laj7IZhLTx58xw/Gm1EKOoJJKZt6RY+bH1ReHxs=" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
  <script src="/js/common.js"></script>
  <% if (defined stash 'load_js') { foreach my $script (@{stash 'load_js'}) { %><script src="/js/<%= $script %>"></script><% } } %>
</body>
</html>
